CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

# Makefile Rules
.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(SRC:.c=.o)
	$(CC) $(CFLAGS) -o $@ $^

clean:
	$(RM) *~ $(NAME) $(SRC:.c=.o)

oclean:
	$(RM) $(SRC:.c=.o)

fclean: clean

re: fclean all

# Ensure that the Makefile doesn't compile without m.h
$(SRC): m.h
